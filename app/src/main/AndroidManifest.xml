<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.lixplor.customviews"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.lixplor.customviews.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!--demo activity-->
        <activity android:name="com.lixplor.customviews.demo.squareimageview.SquareImageViewActivity"/>
        <activity android:name="com.lixplor.customviews.demo.wrapcontentgridview.WrapContentGridViewActivity"/>
        <activity android:name="com.lixplor.customviews.demo.progresswebview.ProgressWebViewActivity"/>
        <activity android:name="com.lixplor.customviews.demo.bouncescrollview.BounceScrollViewActivity"/>
        <activity android:name="com.lixplor.customviews.demo.verticalviewpager.VerticalViewPagerActivity"/>
    </application>

</manifest>